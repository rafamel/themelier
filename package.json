{
    "name": "themelier",
    "displayName": "Themelier",
    "description": "Easy to personalize meta theme / theme editor with awesome out-of-the-box presets",
    "version": "0.0.1",
    "publisher": "rafamel",
    "icon": "images/icon.png",
    "categories": [ "Themes", "Other" ],
	"repository": {
		"type": "git",
		"url": "https://github.com/rafamel/themelier"
	},
    "bugs": {
        "url": "https://github.com/rafamel/themelier/issues"
    },
	"license": "SEE LICENSE IN LICENSE",
    "engines": { "vscode": "^1.12.0" },
    "activationEvents": [ "*" ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "themelier.rebuild",
                "title": "Rebuild Themelier Theme"
            },
            {
                "command": "themelier.choose",
                "title": "Choose Themelier Theme"
            }
        ],
        "themes": [
            {
                "label": "Themelier Dark",
                "uiTheme": "vs-dark",
                "path": "./dest/dark.json"
            },
            {
                "label": "Themelier Light",
                "uiTheme": "vs",
                "path": "./dest/light.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Themelier",
            "properties": {
                "themelier.global": {
                    "type": "string",
                    "default": ""
                },
                "themelier.variable": {
                    "type": "string",
                    "default": ""
                },
                "themelier.definition": {
                    "type": "string",
                    "default": ""
                },
                "themelier.property": {
                    "type": "string",
                    "default": ""
                },
                "themelier.punctuation": {
                    "type": "string",
                    "default": ""
                },
                "themelier.function": {
                    "type": "string",
                    "default": ""
                },
                "themelier.keyword": {
                    "type": "string",
                    "default": ""
                },
                "themelier.storage": {
                    "type": "string",
                    "default": ""
                },
                "themelier.operator": {
                    "type": "string",
                    "default": ""
                },
                "themelier.support": {
                    "type": "string",
                    "default": ""
                },
                "themelier.constant": {
                    "type": "string",
                    "default": ""
                },
                "themelier.reserved": {
                    "type": "string",
                    "default": ""
                },
                "themelier.comment": {
                    "type": "string",
                    "default": ""
                },
                "themelier.string": {
                    "type": "string",
                    "default": ""
                },
                "themelier.htmlTag": {
                    "type": "string",
                    "default": ""
                },
                "themelier.htmlAttr": {
                    "type": "string",
                    "default": ""
                },
                "themelier.htmlId": {
                    "type": "string",
                    "default": ""
                },
                "themelier.muHeading": {
                    "type": "string",
                    "default": ""
                },
                "themelier.muLinkText": {
                    "type": "string",
                    "default": ""
                },
                "themelier.muLinkUrl": {
                    "type": "string",
                    "default": ""
                },
                "themelier.muBold": {
                    "type": "string",
                    "default": ""
                },
                "themelier.muItalic": {
                    "type": "string",
                    "default": ""
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
