{
  "name": "themelier",
  "displayName": "Themelier",
  "description": "Easy to personalize meta theme / theme editor with awesome out-of-the-box presets",
  "version": "0.0.1",
  "publisher": "rafamel",
  "icon": "images/icon.png",
  "categories": [
    "Themes",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rafamel/themelier"
  },
  "bugs": {
    "url": "https://github.com/rafamel/themelier/issues"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "vscode": "^1.12.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "themelier.rebuild",
        "title": "Rebuild Themelier Theme"
      },
      {
        "command": "themelier.choose",
        "title": "Choose Themelier Theme"
      }
    ],
    "themes": [
      {
        "label": "Themelier Dark",
        "uiTheme": "vs-dark",
        "path": "./dest/dark.json"
      },
      {
        "label": "Themelier Light",
        "uiTheme": "vs",
        "path": "./dest/light.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Themelier",
      "properties": {
        "themelier.syntax": {
          "type": "object",
          "description": "Syntax theme colors for Themelier",
          "default": {
            "global": "",
            "string": "",
            "comment": "",
            "punctuation": "",
            "variable": "",
            "property": "",
            "function": "",
            "keyword": "",
            "operator": "",
            "support": "",
            "constant": ""
          }
        },
        "themelier.ui": {
          "type": "object",
          "description": "UI theme colors for Themelier",
          "default": {
            "foreBackground": "",
            "backBackground": ""
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "tinycolor2": "^1.4.1"
  }
}
